@import url('https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800,900|Roboto:100,300,400,500,700,900&display=swap')

header
section
div
  box-sizing border-box

body
  margin 0
  height 100%

.container
  width 1440px
  margin-left auto
  margin-right auto
  $font_size_header = 64px
  h1
    font-size $font_size_header
    font-weight 700
    letter-spacing 0.2ex
    line-height $font_size_header * 1.2
  h2
    font-size $font_size_header * 0.8
    font-weight 100
    letter-spacing 0.125ex
    line-height $font_size_header * 0.8 * 1.2
  h3
    font-size $font_size_header * 0.8 * 0.8
    font-weight 300
    line-height $font_size_header * 0.8 * 0.8 * 1.2



#app
  font-family 'Roboto'
  font-size $font_size = 16px
  line-height $font_size * 1.4
  section
    background-color lightblue
    color darkblue
    padding-bottom 100px
    div.afisha-wrap:nth-child(1)
      padding-top 100px
